{
  "name": "@beabee/vue",
  "description": "Vue components for Beabee",
  "version": "0.1.0",
  "license": "AGPL-3.0",
  "type": "module",
  "main": "./src/index.ts",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "histoire dev",
    "build": "yarn build:lib && yarn build:styles",
    "build:lib": "vite build",
    "build:styles": "vite build --mode styles",
    "start": "histoire preview",
    "format": "prettier --write .",
    "check": "yarn check:tsc && yarn check:prettier",
    "check:tsc": "vue-tsc --noEmit",
    "check:prettier": "prettier -c ."
  },
  "dependencies": {
    "@beabee/client": "workspace:^",
    "@fontsource/fira-sans": "^5.1.1",
    "@fontsource/fira-sans-condensed": "^5.1.1",
    "@fontsource/libre-franklin": "^5.1.2",
    "@fontsource/nunito-sans": "^5.1.1",
    "@fontsource/open-sans": "^5.1.1",
    "@fontsource/roboto": "^5.1.1",
    "@fontsource/roboto-slab": "^5.1.1",
    "@fontsource/rubik": "^5.1.1",
    "@fontsource/ubuntu": "^5.1.1",
    "@fontsource/work-sans": "^5.1.1",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-regular-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "@vuelidate/core": "^2.0.3",
    "color2k": "^2.0.3",
    "import-meta-resolve": "^4.1.0",
    "vue": "^3.5.13",
    "vue-i18n": "^9.14.2",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@beabee/prettier-config": "workspace:^",
    "@beabee/tsconfig": "workspace:^",
    "@histoire/plugin-vue": "^1.0.0-alpha.2",
    "@intlify/unplugin-vue-i18n": "^1.6.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "histoire": "^1.0.0-alpha.2",
    "postcss": "^8.5.3",
    "prettier": "^3.5.2",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.6.3",
    "vite": "^6.2.0",
    "vue-tsc": "^2.2.4"
  },
  "files": [
    "src/"
  ],
  "exports": {
    ".": "./src/index.ts",
    "./components-path": "./src/components",
    "./components": "./src/components/index.ts",
    "./components/button": "./src/components/button/index.ts",
    "./components/button/*": "./src/components/button/*.vue",
    "./components/list": "./src/components/list/index.ts",
    "./components/list/*": "./src/components/list/*.vue",
    "./components/tabs": "./src/components/tabs/index.ts",
    "./components/tabs/*": "./src/components/tabs/*.vue",
    "./components/*": "./src/components/*.vue",
    "./lib/*": "./src/lib/*.ts",
    "./plugins/*": "./src/plugins/*.js",
    "./store/*": "./src/store/*.ts",
    "./types/*": "./src/types/*.ts",
    "./styles/*": "./src/styles/*.css",
    "./styles": "./src/styles/index.css",
    "./assets/*": "./src/assets/*",
    "./tailwind.config": "./tailwind.config.js"
  }
}
