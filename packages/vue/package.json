{
  "name": "@beabee/vue",
  "description": "Vue components for Beabee",
  "version": "0.1.0",
  "license": "AGPL-3.0",
  "type": "module",
  "main": "./src/index.ts",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "yarn build:types && yarn build:lib",
    "build:lib": "vite build",
    "build:types": "vue-tsc --project ./tsconfig.build.json",
    "format": "prettier --write .",
    "check": "yarn check:tsc && yarn check:prettier",
    "check:tsc": "vue-tsc --project ./tsconfig.build.json --noEmit",
    "check:prettier": "prettier -c ."
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "vue": "^3.5.13",
    "vue-i18n": "^9.14.1",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@beabee/prettier-config": "workspace:^",
    "@beabee/tsconfig": "workspace:^",
    "@vitejs/plugin-vue": "^5.2.1",
    "prettier": "^3.4.2",
    "typescript": "~5.6.3",
    "vite": "^6.0.11",
    "vue-tsc": "^2.1.10"
  },
  "files": [
    "src/"
  ]
}
