{
  "name": "@beabee/vue",
  "description": "Vue components for Beabee",
  "version": "0.28.1",
  "license": "AGPL-3.0",
  "type": "module",
  "main": "./src/index.ts",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "docs:start": "histoire preview",
    "docs:dev": "histoire dev",
    "docs:build": "yarn build:lib && yarn build:styles && histoire build",
    "build:lib": "vite build",
    "build:styles": "vite build --mode styles",
    "format": "prettier --write .",
    "check": "yarn check:tsc && yarn check:prettier",
    "check:tsc": "vue-tsc --noEmit",
    "check:prettier": "prettier -c .",
    "generate:index": "yarn workspace @beabee/dev-cli start generate-index --extension ts --baseDir $(pwd) -p ./src/lib ./src/store ./src/types ./src/utils"
  },
  "dependencies": {
    "@fontsource/fira-sans": "^5.1.1",
    "@fontsource/fira-sans-condensed": "^5.1.1",
    "@fontsource/libre-franklin": "^5.1.2",
    "@fontsource/nunito-sans": "^5.1.1",
    "@fontsource/open-sans": "^5.1.1",
    "@fontsource/roboto": "^5.1.1",
    "@fontsource/roboto-slab": "^5.1.1",
    "@fontsource/rubik": "^5.1.1",
    "@fontsource/ubuntu": "^5.1.1",
    "@fontsource/work-sans": "^5.1.1",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-regular-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "@tiptap/core": "^2.14.0",
    "@tiptap/extension-link": "^2.14.0",
    "@tiptap/extension-typography": "^2.14.0",
    "@tiptap/extension-underline": "^2.14.0",
    "@tiptap/pm": "^2.14.0",
    "@tiptap/starter-kit": "^2.14.0",
    "@tiptap/vue-3": "^2.14.0",
    "@vuelidate/core": "^2.0.3",
    "color2k": "^2.0.3",
    "dompurify": "^3.3.0",
    "import-meta-resolve": "^4.1.0",
    "qrcode-generator": "^1.5.0",
    "vue": "^3.5.16",
    "vue-accessible-color-picker": "^5.2.0",
    "vue-i18n": "^11.1.5",
    "vue-multiselect": "^3.2.0",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@beabee/prettier-config": "workspace:^",
    "@beabee/tsconfig": "workspace:^",
    "@histoire/plugin-vue": "^1.0.0-alpha.2",
    "@intlify/unplugin-vue-i18n": "^6.0.8",
    "@types/dompurify": "^3.2.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "histoire": "^1.0.0-alpha.2",
    "postcss": "^8.5.3",
    "prettier": "^3.5.2",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.3",
    "vite": "^6.3.5",
    "vue-tsc": "^2.2.10"
  },
  "files": [
    "src/"
  ],
  "exports": {
    ".": "./src/index.ts",
    "./components-path": "./src/components",
    "./components": "./src/components/index.ts",
    "./lib/*": "./src/lib/*.ts",
    "./plugins/*": "./src/plugins/*.js",
    "./store/*": "./src/store/*.ts",
    "./types": "./src/types/index.ts",
    "./styles/*": "./src/styles/*.css",
    "./styles": "./src/styles/index.css",
    "./assets/*": "./src/assets/*",
    "./tailwind.config": "./tailwind.config.js"
  }
}
