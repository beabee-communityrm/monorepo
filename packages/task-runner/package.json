{
  "name": "@beabee/task-runner",
  "version": "0.16.0",
  "main": "src/index.ts",
  "type": "module",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "yarn exec 'deno task build'",
    "build:node": "yarn exec 'deno task build:node'",
    "build:types": "tsc --project ./tsconfig.json",
    "beabee:cli": "yarn exec 'deno task beabee:cli'",
    "sync": "yarn exec 'deno task sync'",
    "format": "yarn exec 'deno task format'",
    "generate:index": "yarn exec 'deno task generate:index'"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    },
    "./src": "./src/index.ts",
    "./src/*": "./src/*.ts",
    "./package.json": "./package.json"
  },
  "devDependencies": {
    "@beabee/cli": "workspace:^",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "bullmq": "^5.7.15"
  }
}
