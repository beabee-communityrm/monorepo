{
  "name": "@beabee/locales",
  "version": "0.16.0",
  "main": "src/index.ts",
  "type": "module",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "beabee:cli": "yarn exec 'deno task beabee:cli'",
    "clear": "rm -rf dist; exit 0",
    "build": "yarn build:node && yarn build:types && yarn build:json",
    "build:node": "beabee-cli cross-build node",
    "build:types": "tsc",
    "build:json": "mkdir -p ./dist/json/ && cp ./src/locales/json/* ./dist/json/",
    "check": "yarn check:types",
    "check:types": "yarn build:types --noEmit --emitDeclarationOnly false",
    "generate:index": "beabee-cli generate-index --ext ts ./src/locales",
    "update:locales": "yarn update:locales:json && yarn update:locales:ts && yarn generate:index",
    "update:locales:json": "beabee-cli i18n $(git rev-parse --symbolic-full-name --abbrev-ref HEAD) --output-dir ./src/locales/json --format json",
    "update:locales:ts": "beabee-cli i18n $(git rev-parse --symbolic-full-name --abbrev-ref HEAD) --output-dir ./src/locales --format ts"
  },
  "exports": {
    "./package.json": "./package.json",
    "./*.json": "./dist/json/*.json",
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    }
  },
  "devDependencies": {
    "@beabee/cli": "workspace:^",
    "typescript": "^5.4.5"
  }
}
