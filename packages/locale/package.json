{
  "name": "@beabee/locale",
  "description": "Beabee Locale Translations",
  "version": "0.1.0",
  "type": "module",
  "homepage": "https://github.com/beabee-communityrm/monorepo/tree/main/packages/locale",
  "repository": {
    "type": "git",
    "url": "https://github.com/beabee-communityrm/monorepo/tree/main/packages/locale"
  },
  "scripts": {
    "clear": "rm -rf dist/",
    "generate": "node --experimental-specifier-resolution=node --experimental-strip-types generate.ts",
    "build": "yarn clear && node esbuild.js && tsc",
    "check": "tsc --noEmit"
  },
  "devDependencies": {
    "@gjsify/esbuild-plugin-transform-ext": "^0.0.4",
    "esbuild": "^0.25.0",
    "googleapis": "^144.0.0",
    "markdown-it": "^14.1.0",
    "typescript": "~5.6.3"
  },
  "files": [
    "dist/"
  ],
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    "./locales/*": {
      "import": {
        "types": "./dist/types/locales/*.d.ts",
        "default": "./dist/esm/locales/*.js"
      },
      "require": {
        "types": "./dist/types/locales/*.d.cts",
        "default": "./dist/cjs/locales/*.cjs"
      }
    },
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    }
  }
}
