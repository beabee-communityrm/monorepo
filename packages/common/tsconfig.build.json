{
  "include": ["./src"],
  "exclude": ["./test"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "./src",
    "moduleResolution": "bundler",
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "declaration": true,
    "isolatedModules": true,
    "isolatedDeclarations": true,
    "skipLibCheck": true,
    "preserveWatchOutput": true,
    "diagnostics": true
  }
}
