{
  "extends": "@tsconfig/recommended",
  "include": ["./src"],
  "exclude": ["./test"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declarationDir": "./dist/types",
    "allowImportingTsExtensions": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true
  }
}
