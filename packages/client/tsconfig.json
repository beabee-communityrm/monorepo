{
  "extends": "@tsconfig/recommended",
  "include": ["./src"],
  "exclude": ["src/**/*.test.ts"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declarationDir": "./dist/types",
    "allowImportingTsExtensions": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "diagnostics": true,
    "composite": true
  },
  "references": [
    { "path": "../core" },
    { "path": "../common" }
  ]
}
