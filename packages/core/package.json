{
  "name": "@beabee/core",
  "description": "Core package for the beabee backend",
  "version": "0.16.0",
  "type": "commonjs",
  "scripts": {
    "build": "rimraf dist/ && tsc -p tsconfig.build.json && cp -r src/data dist/",
    "dev": "tsc-watch --noClear -p tsconfig.build.json",
    "format": "prettier --write .",
    "generate:index": "barrelsby -c barrelsby.json",
    "test": "jest --passWithNoTests"
  },
  "files": [
    "dist/"
  ],
  "imports": {
    "#locale": "./dist/locales/current.js",
    "#*": "./dist/*.js"
  },
  "exports": {
    "./config": "./dist/config/config.js",
    "./database": "./dist/database.js",
    "./errors": "./dist/errors/index.js",
    "./locale": "./dist/locales/current.js",
    "./logging": "./dist/logging.js",
    "./models": "./dist/models/index.js",
    "./type": "./dist/type/index.js",
    "./server": "./dist/server.js",
    "./lib/*": "./dist/lib/*.js",
    "./services/*": "./dist/services/*.js",
    "./utils/*": "./dist/utils/*.js"
  },
  "dependencies": {
    "@beabee/beabee-common": "workspace:^",
    "@sendgrid/mail": "^8.1.3",
    "JSONStream": "^1.3.5",
    "axios": "^1.7.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "date-fns": "^4.1.0",
    "express": "^4.19.2",
    "express-winston": "^4.2.0",
    "gocardless-nodejs": "^3.25.0",
    "gunzip-maybe": "^1.4.2",
    "jsonwebtoken": "^9.0.2",
    "juice": "^10.0.0",
    "moment": "^2.30.1",
    "nodemailer": "^6.9.13",
    "otpauth": "^9.3.1",
    "reflect-metadata": "^0.2.2",
    "routing-controllers": "^0.10.4",
    "slugify": "^1.6.6",
    "stripe": "^15.9.0",
    "tar-stream": "^3.1.7",
    "typeorm": "^0.3.20",
    "uuid": "^9.0.1",
    "winston": "^3.13.0",
    "yaml-front-matter": "^4.1.1"
  },
  "devDependencies": {
    "@types/gunzip-maybe": "^1.4.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/nodemailer": "^6.4.15",
    "@types/tar-stream": "^3.1.3",
    "@types/uuid": "^9.0.8",
    "@types/yaml-front-matter": "^4.1.3",
    "barrelsby": "^2.8.1",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "prettier": "3.3.0",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.2.5",
    "tsc-watch": "^6.2.0",
    "tsconfig": "^7.0.0",
    "typescript": "^5.6.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beabee-communityrm/monorepo.git"
  },
  "author": "",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/beabee-communityrm/monorepo/issues"
  },
  "homepage": "https://github.com/beabee-communityrm/monorepo/blob/main/packages/core/README.md"
}
