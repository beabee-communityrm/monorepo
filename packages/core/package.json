{
  "name": "@beabee/core",
  "description": "Core package for the beabee backend",
  "version": "0.16.0",
  "type": "commonjs",
  "scripts": {
    "build": "rimraf dist/ && tsc -p tsconfig.build.json && cp -r src/data dist/",
    "dev": "tsc --watch --preserveWatchOutput -p tsconfig.build.json",
    "format": "prettier --write .",
    "check": "concurrently 'yarn:check:*'",
    "check:tsc": "tsc -p tsconfig.build.json --noEmit",
    "check:prettier": "prettier -c .",
    "generate:index": "barrelsby -c barrelsby.json",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "files": [
    "dist/"
  ],
  "imports": {
    "#locale": "./dist/locales/current.js",
    "#filter-handlers": "./dist/filter-handlers/index.js",
    "#filter-handlers/*": "./dist/filter-handlers/*.js",
    "#lib": "./dist/lib/index.js",
    "#lib/*": "./dist/lib/*.js",
    "#models": "./dist/models/index.js",
    "#models/*": "./dist/models/*.js",
    "#services": "./dist/services/index.js",
    "#services/*": "./dist/services/*.js",
    "#providers": "./dist/providers/index.js",
    "#providers/*": "./dist/providers/*.js",
    "#*": "./dist/*.js"
  },
  "exports": {
    "./config": "./dist/config/config.js",
    "./database": "./dist/database.js",
    "./errors": "./dist/errors/index.js",
    "./filter-handlers": "./dist/filter-handlers/index.js",
    "./filter-handlers/*": "./dist/filter-handlers/*.js",
    "./locale": "./dist/locales/current.js",
    "./logging": "./dist/logging.js",
    "./models": "./dist/models/index.js",
    "./models/*": "./dist/models/*.js",
    "./type": "./dist/type/index.js",
    "./server": "./dist/server.js",
    "./lib/*": "./dist/lib/*.js",
    "./services": "./dist/services/index.js",
    "./services/*": "./dist/services/*.js",
    "./providers": "./dist/providers/index.js",
    "./providers/*": "./dist/providers/*.js",
    "./utils/*": "./dist/utils/*.js"
  },
  "dependencies": {
    "@beabee/beabee-common": "workspace:^",
    "@sendgrid/mail": "^8.1.4",
    "JSONStream": "^1.3.5",
    "axios": "^1.7.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "date-fns": "^4.1.0",
    "express": "^4.21.2",
    "express-winston": "^4.2.0",
    "gocardless-nodejs": "^4.3.0",
    "gunzip-maybe": "^1.4.2",
    "jsonwebtoken": "^9.0.2",
    "juice": "^11.0.0",
    "moment": "^2.30.1",
    "nodemailer": "^6.9.16",
    "otpauth": "^9.3.6",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.2",
    "routing-controllers": "^0.10.4",
    "slugify": "^1.6.6",
    "stripe": "^15.9.0",
    "tar-stream": "^3.1.7",
    "typeorm": "^0.3.20",
    "uuid": "^11.0.3",
    "winston": "^3.17.0",
    "yaml-front-matter": "^4.1.1"
  },
  "devDependencies": {
    "@beabee/prettier-config": "workspace:^",
    "@beabee/tsconfig": "workspace:^",
    "@types/gunzip-maybe": "^1.4.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.38",
    "@types/tar-stream": "^3.1.3",
    "@types/yaml-front-matter": "^4.1.3",
    "barrelsby": "^2.8.1",
    "concurrently": "^9.1.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "tsconfig": "^7.0.0",
    "typescript": "~5.6.3",
    "vitest": "^3.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beabee-communityrm/monorepo.git"
  },
  "author": "",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/beabee-communityrm/monorepo/issues"
  },
  "homepage": "https://github.com/beabee-communityrm/monorepo/blob/main/packages/core/README.md"
}
