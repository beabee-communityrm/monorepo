{
  "extends": "@beabee/tsconfig/tsconfig.server.json",
  "include": ["./src/**/*", "./src/**/*.json"],
  "exclude": ["./**/*.test.ts"],
  "references": [{ "path": "../common" }, { "path": "../locale" }],
  "compilerOptions": {
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "#locale": ["./src/locales/current"],
      "#*": ["./src/*"]
    },
    "typeRoots": ["./src/typings", "./node_modules/@types/"]
  }
}
