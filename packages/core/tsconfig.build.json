{
  "extends": "../../configs/backend/tsconfig.build.json",
  "include": ["./src/**/*", "./src/**/*.json"],
  "exclude": ["./**/*.test.ts"],
  "compilerOptions": {
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "#locale": ["./src/locales/current"],
      "#*": ["./src/*"]
    },
    "typeRoots": ["./src/typings", "./node_modules/@types/"]
  }
}
