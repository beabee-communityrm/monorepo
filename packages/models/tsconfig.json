{
  "include": ["./src"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "rootDir": "./src",
    "declarationDir": "./dist/esm",
    "outDir": "./dist/esm",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
