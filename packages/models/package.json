{
  "name": "@beabee/models",
  "version": "0.16.0",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "type": "module",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "beabee:cli": "yarn exec 'deno task beabee:cli'",
    "clear": "rm -rf dist; exit 0",
    "build": "yarn generate:index && yarn build:esm && yarn build:cjs && yarn rename:cjs",
    "build:esm": "tsc --project ./tsconfig.json --outDir ./dist/esm",
    "build:cjs": "tsc --project ./tsconfig.cjs.json --outDir ./dist/cjs",
    "check": "yarn check:types",
    "check:types": "yarn check:types:esm && yarn check:types:cjs",
    "check:types:esm": "yarn run build:esm --noEmit",
    "check:types:cjs": "yarn run build:cjs --noEmit",
    "rename:cjs": "mv ./dist/cjs/index.js ./dist/cjs/index.cjs && mv ./dist/cjs/index.d.ts ./dist/cjs/index.d.cts",
    "generate:index": "beabee-cli generate-index --ext js ./src/models"
  },
  "exports": {
    "./package.json": "./package.json",
    "./src": "./src/index.ts",
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    }
  },
  "devDependencies": {
    "@beabee/cli": "workspace:^",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@beabee/beabee-common": "workspace:^",
    "@beabee/config": "workspace:^",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  }
}
