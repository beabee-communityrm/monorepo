{
  "extends": "@beabee/tsconfig/tsconfig.server.json",
  "include": ["./src/**/*"],
  "exclude": ["./**/*.test.ts"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "#core/*": ["./src/core/*"],
      "#api/*": ["./src/api/*"],
      "#apps/*": ["./src/apps/*"],
      "#type": ["./src/type/index"],
      "#type/*": ["./src/type/*"]
    },
    "typeRoots": ["./src/typings", "./node_modules/@types/"]
  }
}
