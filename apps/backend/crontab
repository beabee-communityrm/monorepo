# Add node to the PATH
PATH=/usr/local/bin:/usr/bin:/bin

# Spread the jobs out over a few minutes to avoid overloading the server
0 1 * * * su node -c 'cd /opt/apps/backend/ && sleep $((RANDOM \% 120)) && yarn backend-cli sync mailchimp' > /proc/1/fd/1 2>&1
5 1 * * * su node -c 'cd /opt/apps/backend/ && sleep $((RANDOM \% 120)) && yarn backend-cli process gifts' > /proc/1/fd/1 2>&1
10 1 * * * su node -c 'cd /opt/apps/backend/ && sleep $((RANDOM \% 120)) && node ./dist/tools/process-segments.js' > /proc/1/fd/1 2>&1
