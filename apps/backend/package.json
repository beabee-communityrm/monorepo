{
  "name": "@beabee/backend",
  "version": "0.16.0",
  "private": true,
  "description": "A community engagement system for community newsrooms",
  "main": "dist/app.js",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beabee-communityrm/beabee.git"
  },
  "author": "Tom Lynch & Chris Roberts",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/beabee-communityrm/beabee/issues"
  },
  "homepage": "https://github.com/beabee-communityrm/beabee#readme",
  "scripts": {
    "start:app:prod": "node dist/app.js",
    "start:app:local": "node -r dotenv/config dist/app.js",
    "start:api:prod": "node dist/api/app.js",
    "start:api:local": "node -r dotenv/config dist/api/app.js",
    "start:webhooks:prod": "node dist/webhooks/app.js",
    "start:webhooks:local": "node -r dotenv/config dist/webhooks/app.js",
    "dev": "yarn dev:app",
    "dev:app": "yarn build && docker compose restart && concurrently -c red,green,blue 'yarn:dev:app:*'",
    "dev:app:watch": "tsc-watch -p tsconfig.build.json --noClear --onSuccess 'docker compose restart app api_app webhook_app router'",
    "dev:app:watch:assets": "gulp watch",
    "dev:app:logs": "yarn exec bash -c 'while true; do docker compose logs -f --tail=0 app api_app webhook_app; sleep 1; done'",
    "dev:api": "yarn build && docker compose restart && concurrently -c red,green,blue 'yarn:dev:api:*'",
    "dev:api:watch": "tsc-watch -p tsconfig.build.json --noClear --onSuccess 'docker compose restart api_app router'",
    "dev:api:logs": "yarn exec bash -c 'while true; do docker compose logs -f --tail=0 api_app; sleep 1; done'",
    "build": "rimraf /dist && gulp build && tsc -p ./tsconfig.build.json",
    "generate:index": "beabee-cli generate-index --ext js ./src/api/controllers ./src/api/decorators ./src/api/dto ./src/api/interceptors ./src/api/middlewares ./src/api/params ./src/api/transformers ./src/api/utils ./src/api/validators ./src/services ./src/express",
    "watch": "tsc-watch -p tsconfig.build.json --noClear",
    "check": "concurrently 'yarn:check:*'",
    "check:types": "tsc --noEmit",
    "check:prettier": "prettier -c .",
    "check:dependencies": "dpdm -T --no-warning --no-tree --exit-code circular:1 src/app.ts src/webhooks/app.ts src/api/app.ts",
    "format": "prettier --write .",
    "typeorm": "typeorm -d ./dist/core/database.js",
    "docker-compose:build": "docker compose build",
    "docker-compose:start": "docker compose up -d",
    "docker-compose:restart": "docker compose restart",
    "docker:build:latest": "yarn docker:build:app:latest && yarn docker:build:router:latest",
    "docker:build:local": "yarn docker:build:app:local && yarn docker:build:router:local",
    "docker:build:app:latest": "docker build --build-arg REVISION=$(git rev-parse --short HEAD) --build-arg VERSION=latest -t beabee/beabee:latest -f ./Dockerfile ../..",
    "docker:build:app:local": "docker build --build-arg REVISION=$(git rev-parse --short HEAD) --build-arg VERSION=local -t beabee/beabee:local -f ./Dockerfile ../..",
    "docker:build:router:latest": "docker build --build-arg REVISION=$(git rev-parse --short HEAD) --build-arg VERSION=latest --target router -t beabee/router:latest -f ./Dockerfile ../..",
    "docker:build:router:local": "docker build --build-arg REVISION=$(git rev-parse --short HEAD) --build-arg VERSION=local --target router -t beabee/router:local -f ./Dockerfile ../..",
    "docker:push:latest": "docker push beabee/beabee:latest",
    "docker:push:dev": "docker push beabee/beabee:dev"
  },
  "dependencies": {
    "@beabee/beabee-common": "workspace:^",
    "@beabee/core": "workspace:^",
    "@beabee/locales": "workspace:^",
    "@beabee/models": "workspace:^",
    "@captchafox/node": "^1.2.0",
    "@inquirer/prompts": "^3.3.2",
    "@sendgrid/mail": "^8.1.3",
    "JSONStream": "^1.3.5",
    "ajv": "^8.15.0",
    "ajv-formats": "^2.1.1",
    "axios": "^1.7.2",
    "body-parser": "^1.20.2",
    "bootstrap-sass": "^3.4.3",
    "chance": "^1.1.11",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "clean-deep": "^3.4.0",
    "connect-busboy": "^1.0.0",
    "connect-pg-simple": "^9.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "csv-parse": "^5.5.6",
    "csv-stringify": "^6.5.0",
    "date-fns": "^3.6.0",
    "discourse-sso": "^1.0.5",
    "dot": "^1.1.3",
    "escape-string-regexp": "^5.0.0",
    "express": "^4.19.2",
    "express-flash": "0.0.2",
    "express-session": "^1.18.0",
    "express-winston": "^4.2.0",
    "gocardless-nodejs": "^3.25.0",
    "gunzip-maybe": "^1.4.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "juice": "^10.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "muhammara": "^4.1.0",
    "nodemailer": "^6.9.13",
    "otpauth": "^9.3.1",
    "papaparse": "^5.4.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.11.5",
    "pug": "^3.0.3",
    "query-string": "^7.1.3",
    "reflect-metadata": "^0.2.2",
    "routing-controllers": "^0.10.4",
    "slugify": "^1.6.6",
    "stripe": "^15.9.0",
    "tar-stream": "^3.1.7",
    "typeorm": "^0.3.20",
    "uuid": "^9.0.1",
    "winston": "^3.13.0",
    "yaml-front-matter": "^4.1.1"
  },
  "devDependencies": {
    "@beabee/cli": "workspace:^",
    "@tsconfig/node20": "^20.1.4",
    "@types/chance": "^1.1.6",
    "@types/connect-busboy": "^1.0.3",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/csurf": "^1.11.5",
    "@types/discourse-sso": "^1.0.3",
    "@types/dot": "^1.1.7",
    "@types/express": "^4.17.21",
    "@types/express-flash": "0.0.5",
    "@types/express-session": "^1.18.0",
    "@types/gunzip-maybe": "^1.4.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.4",
    "@types/node": "^20.14.1",
    "@types/nodemailer": "^6.4.15",
    "@types/papaparse": "^5.3.14",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/pug": "^2.0.10",
    "@types/tar-stream": "^3.1.3",
    "@types/uuid": "^9.0.8",
    "@types/yaml-front-matter": "^4.1.3",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "dpdm": "^3.14.0",
    "gulp": "^4.0.2",
    "gulp-postcss": "^9.0.1",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "postcss": "^8.4.38",
    "prettier": "3.3.0",
    "rimraf": "^5.0.7",
    "sass": "^1.77.4",
    "tsc-watch": "^6.2.0",
    "tsconfig": "^7.0.0",
    "typescript": "^5.4.5"
  },
  "browserslist": [
    "last 1 versions",
    "> 1%"
  ],
  "imports": {
    "#api/utils": "./dist/api/utils/index.js",
    "#api/dto": "./dist/api/dto/index.js",
    "#api/*": "./dist/api/*.js",
    "#apps/*": "./dist/apps/*.js",
    "#locale": "./dist/locales/current.js",
    "#express/*": "./dist/express/*.js",
    "#express": "./dist/express/index.js",
    "#services": "./dist/services/index.js"
  },
  "overrides": {
    "gulp-sourcemaps": {
      "postcss": "8.4.32"
    }
  }
}