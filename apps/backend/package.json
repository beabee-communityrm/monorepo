{
  "name": "@beabee/backend",
  "version": "0.16.0",
  "private": true,
  "description": "A community engagement system for community newsrooms",
  "main": "built/app.js",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beabee-communityrm/monorepo.git"
  },
  "author": "Tom Lynch & Chris Roberts",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/beabee-communityrm/monorepo/issues"
  },
  "homepage": "https://github.com/beabee-communityrm/monorepo/blob/main/apps/backend/README.md",
  "scripts": {
    "test": "jest --setupFiles dotenv/config --passWithNoTests",
    "start": "node built/app.js",
    "start:api": "node built/api/app.js",
    "start:webhooks": "node built/webhooks/app.js",
    "dev": "yarn dev:api",
    "dev:app": "yarn build && docker compose -f ../../docker-compose.yml restart && concurrently -c red,green,blue 'yarn:dev:app:*'",
    "dev:app:watch": "tsc-watch -p tsconfig.build.json --noClear --onSuccess 'docker compose -f ../../docker-compose.yml restart app api_app webhook_app router'",
    "dev:app:watch:assets": "gulp watch",
    "dev:app:logs": "yarn exec bash -c 'while true; do docker compose -f ../../docker-compose.yml logs -f --tail=0 app api_app webhook_app; sleep 1; done'",
    "dev:api": "yarn build && docker compose -f ../../docker-compose.yml restart && concurrently -c red,green,blue 'yarn:dev:api:*'",
    "dev:api:watch": "tsc-watch -p tsconfig.build.json --noClear --onSuccess 'docker compose -f ../../docker-compose.yml restart api_app router'",
    "dev:api:logs": "yarn exec bash -c 'while true; do docker compose -f ../../docker-compose.yml logs -f --tail=0 api_app; sleep 1; done'",
    "build": "rimraf built/ && gulp build && tsc -p ./tsconfig.build.json",
    "generate:index": "ts-node scripts/generate-index.ts",
    "watch": "tsc-watch -p tsconfig.build.json --noClear",
    "check": "concurrently 'yarn:check:*'",
    "check:tsc": "tsc --noEmit",
    "check:prettier": "prettier -c .",
    "check:dependencies": "dpdm -T --no-warning --no-tree --exit-code circular:1 src/app.ts src/webhooks/app.ts src/api/app.ts",
    "format": "prettier --write .",
    "typeorm": "typeorm -d ./built/core/lib/typeorm.js",
    "typeorm:migrate": "docker compose -f ../../docker-compose.yml up -d db && docker compose -f ../../docker-compose.yml run --rm app yarn typeorm migration:run"
  },
  "dependencies": {
    "@beabee/beabee-common": "workspace:^",
    "@beabee/core": "workspace:^",
    "@captchafox/node": "^1.2.0",
    "@inquirer/prompts": "^3.3.2",
    "ajv": "^8.15.0",
    "ajv-formats": "^2.1.1",
    "axios": "^1.7.2",
    "body-parser": "^1.20.2",
    "bootstrap-sass": "^3.4.3",
    "chance": "^1.1.11",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "clean-deep": "^3.4.0",
    "connect-busboy": "^1.0.0",
    "connect-pg-simple": "^9.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "csv-parse": "^5.5.6",
    "csv-stringify": "^6.5.0",
    "date-fns": "^4.1.0",
    "discourse-sso": "^1.0.5",
    "dot": "^1.1.3",
    "escape-string-regexp": "^5.0.0",
    "express": "^4.19.2",
    "express-flash": "0.0.2",
    "express-session": "^1.18.0",
    "gocardless-nodejs": "^3.25.0",
    "helmet": "^7.1.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.3",
    "moment": "^2.30.1",
    "papaparse": "^5.4.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pug": "^3.0.3",
    "query-string": "^7.1.3",
    "reflect-metadata": "^0.2.2",
    "routing-controllers": "^0.10.4",
    "slugify": "^1.6.6",
    "stripe": "^15.9.0",
    "typeorm": "^0.3.20",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/chance": "^1.1.6",
    "@types/connect-busboy": "^1.0.3",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/csurf": "^1.11.5",
    "@types/discourse-sso": "^1.0.3",
    "@types/dot": "^1.1.7",
    "@types/express": "^4.17.21",
    "@types/express-flash": "0.0.5",
    "@types/express-session": "^1.18.0",
    "@types/lodash": "^4.17.4",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^20.14.1",
    "@types/papaparse": "^5.3.14",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/pug": "^2.0.10",
    "@types/uuid": "^9.0.8",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "dpdm": "^3.14.0",
    "gulp": "^4.0.2",
    "gulp-postcss": "^9.0.1",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.38",
    "prettier": "3.3.0",
    "rimraf": "^5.0.7",
    "sass": "^1.77.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.2.0",
    "tsconfig": "^7.0.0",
    "typescript": "^5.6.3"
  },
  "browserslist": [
    "last 1 versions",
    "> 1%"
  ],
  "_moduleAliases": {
    "@core": "./built/core",
    "@api": "./built/api",
    "@apps": "./built/apps",
    "@type": "./built/type"
  },
  "overrides": {
    "gulp-sourcemaps": {
      "postcss": "8.4.32"
    }
  }
}