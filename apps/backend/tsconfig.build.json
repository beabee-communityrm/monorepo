{
  "extends": "@beabee/tsconfig/tsconfig.server.json",
  "include": ["./src/**/*", "./src/**/*.json"],
  "exclude": ["./src/static/**/*", "./**/*.test.ts"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist", // TODO: use standard outDir
    "paths": {
      "@core/*": ["./src/core/*"],
      "@apps/*": ["./src/apps/*"],
      "@api/*": ["./src/api/*"],
      "@type/*": ["./src/type/*"]
    },
    "typeRoots": ["./src/typings", "./node_modules/@types/"]
  }
}
