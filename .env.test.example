# -----------------------------------------------------------------------
# Test Environment Configuration
# -----------------------------------------------------------------------
# Override the environment variables in .env for the test environment

# Docker Compose project name for test environment
COMPOSE_PROJECT_NAME=beabee-test

# Application environment for testing
NODE_ENV=test

# Application revision identifier for tests
REVISION=local

# Application version identifier for tests
VERSION=test

# -----------------------------------------------------------------------
# Test Network Configuration
# -----------------------------------------------------------------------

# Port for the maildev server in test environment
MAIL_PORT=4025

# Port for the Docker router application in test environment  
ROUTER_PORT=4002

# Port for the PostgreSQL database in test environment
DB_PORT=5432

# -----------------------------------------------------------------------
# Test Security & Authentication Configuration
# -----------------------------------------------------------------------

# Public URL of the instance for test environment
BEABEE_AUDIENCE=http://localhost:4002

# Enable development mode features in test environment
BEABEE_DEV=true

# Log format for application logs in test environment
BEABEE_LOGFORMAT=simple

# Secret key for signing JWT tokens and encrypting sensitive data (test)
BEABEE_SECRET="It's dangerous to go alone! Take this."

# Secret key for internal service authentication (test)
BEABEE_SERVICE_SECRET="Code is like humor. When you have to explain it, it's bad."

# Cookie domain setting for authentication cookies (test)
BEABEE_COOKIE_DOMAIN=localhost

# Whether cookies should be sent only over HTTPS (test)
BEABEE_COOKIE_SECURE=false

# Country code for localization purposes (test)
BEABEE_COUNTRYCODE=en

# Currency code for payment processing (test)
BEABEE_CURRENCYCODE=GBP

# Currency symbol to display in the interface (test)
BEABEE_CURRENCYSYMBOL=Â£

# CaptchaFox secret key for backend CAPTCHA verification (test)
BEABEE_CAPTCHAFOX_SECRET=ok_11111111000000001111111100000000

# Email provider for test environment
BEABEE_EMAIL_PROVIDER=smtp
BEABEE_EMAIL_SETTINGS_HOST=mail
BEABEE_EMAIL_SETTINGS_PORT=1025
BEABEE_EMAIL_SETTINGS_AUTH_USER=dev
BEABEE_EMAIL_SETTINGS_AUTH_PASS=dev

# Newsletter provider for test environment
BEABEE_NEWSLETTER_PROVIDER=none

# GoCardless configuration for test environment
# Note: Using 'test' value instead of empty default for test environment
BEABEE_GOCARDLESS_ACCESSTOKEN=
BEABEE_GOCARDLESS_SECRET=test
BEABEE_GOCARDLESS_SANDBOX=true

# Stripe configuration for test environment
# Note: These should be set to actual test keys when running payment tests
#BEABEE_STRIPE_PUBLICKEY=
#BEABEE_STRIPE_SECRETKEY=
#BEABEE_STRIPE_WEBHOOKSECRET=
#BEABEE_STRIPE_MEMBERSHIPPRODUCTID=

# PostgreSQL connection URL for test database
BEABEE_DATABASE_URL=postgres://membership_system:membership_system@db/membership_system

# -----------------------------------------------------------------------
# Test File Storage Configuration
# -----------------------------------------------------------------------

# MinIO Admin port for test environment
BEABEE_MINIO_PORT_ADMIN=9002

# MinIO Console port (Admin UI) for test environment
BEABEE_MINIO_PORT_CONSOLE=9003

# Available image widths for resizing in test environment (comma-separated)
# Default: 100,300,400,600,900,1200,1440,1800
# BEABEE_IMAGE_AVAILABLE_WIDTHS=100,300,400,600,900,1200,1440,1800

# -----------------------------------------------------------------------
# Test User Configuration
# -----------------------------------------------------------------------

# Primary test user credentials
# Used by: docker-compose-setup.ts to create a superadmin test user
# Used by: test suites for authentication and API testing
TEST_USER_EMAIL=test@beabee.io
TEST_USER_FIRSTNAME=Test
TEST_USER_LASTNAME=Test
TEST_USER_PASSWORD=test1234
TEST_USER_ROLE=superadmin

# Rate limiting test user credentials
# Used by: docker-compose-setup.ts to create a user for rate limiting tests
# Used by: test suites to verify rate limiting functionality
TEST_RATE_LIMIT_USER_EMAIL=rate-limit-test@beabee.io
TEST_RATE_LIMIT_USER_FIRSTNAME=Rate
TEST_RATE_LIMIT_USER_LASTNAME=Limit
TEST_RATE_LIMIT_USER_PASSWORD=rate-limit-test1234
TEST_RATE_LIMIT_USER_ROLE=superadmin

# Test API key configuration
# Used by: docker-compose-setup.ts to create an API key for test user
# Used by: test suites for API authentication
TEST_API_KEY_DESCRIPTION=api-tests

# API key for test authentication (dynamically generated during setup)
# Set by: docker-compose-setup.ts during test environment initialization
# Used by: env.ts and test suites for API authentication
# Note: This value is automatically generated and should not be manually set
# API_KEY=

# -----------------------------------------------------------------------
# Frontend Test Configuration
# -----------------------------------------------------------------------

# Port number for the Vite development server in test environment
VITE_DEV_SERVER_PORT=4000

# Base URL of the application in test environment
APP_BASE_URL=http://localhost:4002
