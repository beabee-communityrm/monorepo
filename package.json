{
  "name": "@beabee/root",
  "version": "0.16.0",
  "private": true,
  "type": "module",
  "scripts": {
    "setup": "yarn workspaces foreach --verbose --worktree -p run setup",
    "build": "yarn workspaces foreach --verbose --worktree --topological-dev run build",
    "build:types": "yarn workspaces foreach --verbose --worktree --topological-dev run build:types",
    "build:backend": "yarn workspaces foreach --from '@beabee/backend' --recursive --topological-dev run build",
    "build:frontend": "yarn workspaces foreach --from '@beabee/frontend' --recursive --topological-dev run build",
    "build:task-runner-dashboard": "yarn workspaces foreach --from '@beabee/task-runner-dashboard' --recursive --topological-dev run build",
    "build:task-runner-worker": "yarn workspaces foreach --from '@beabee/task-runner-worker' --recursive --topological-dev run build",
    "build:common": "yarn workspaces foreach --from '@beabee/beabee-common' --recursive --topological-dev run build",
    "build:locales": "yarn workspaces foreach --from '@beabee/locales' --recursive --topological-dev run build",
    "build:cli": "yarn workspaces foreach --from '@beabee/cli' --recursive --topological-dev run build",
    "deno:cache:retry": "./scripts/retry.sh deno:cache",
    "deno:cache:refresh:retry": "./scripts/retry.sh deno:cache:refresh",
    "deno:cache": "yarn workspaces foreach --verbose --worktree run deno:cache",
    "deno:cache:refresh": "yarn workspaces foreach --verbose --worktree run deno:cache:refresh",
    "start:backend": "yarn workspace @beabee/backend run start",
    "start:api": "yarn workspace @beabee/backend run start:api",
    "start:webhooks": "yarn workspace @beabee/backend run start:webhooks",
    "start:task-runner-dashboard": "yarn workspace @beabee/task-runner-dashboard run start",
    "start:task-runner-worker": "yarn workspace @beabee/task-runner-worker run start",
    "dev": "yarn workspaces foreach --verbose --worktree -p -i run dev",
    "format": "yarn workspaces foreach --verbose --worktree -p run format",
    "test": "yarn workspaces foreach --verbose --worktree -p run test",
    "check": "yarn workspaces foreach --verbose --worktree -p run check",
    "sync": "yarn workspaces foreach --verbose --worktree -p run sync",
    "generate:index": "yarn workspaces foreach --verbose --worktree -p run generate:index",
    "upgrade": "yarn set version latest && yarn install && yarn upgrade-interactive && yarn run sync && yarn deno:cache:refresh",
    "docker-compose:build": "yarn workspaces foreach --verbose --worktree --topological-dev run docker-compose:build",
    "docker-compose:start": "yarn workspaces foreach --verbose --worktree --topological-dev run docker-compose:start",
    "docker-compose:restart": "yarn workspaces foreach --verbose --worktree --topological-dev run docker-compose:restart",
    "docker:build:latest": "yarn workspaces foreach --verbose --worktree --topological-dev run docker:build:latest",
    "docker:build:local": "yarn workspaces foreach --verbose --worktree --topological-dev run docker:build:local",
    "docker:start:local": "yarn workspaces foreach --verbose --worktree -p run docker:start:local",
    "docker:start:latest": "yarn workspaces foreach --verbose --worktree -p run docker:start:latest",
    "docker:push:latest": "yarn workspaces foreach --verbose --worktree -p run docker:push:latest",
    "docker:push:dev": "yarn workspaces foreach --verbose --worktree -p run docker:push:dev",
    "publish:next": "yarn workspaces foreach --verbose --worktree --no-private npm publish --tolerate-republish --tag next --access public",
    "publish:latest": "yarn workspaces foreach --verbose --worktree --no-private npm publish --tolerate-republish --tag latest --access public"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "docker/*"
  ],
  "packageManager": "yarn@4.3.1"
}
